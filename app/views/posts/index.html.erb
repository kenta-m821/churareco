<%# <img src="assets/camera.jpeg" alt="カメラアイコン"> %>
<% if user_signed_in? %>
  <%= link_to image_tag('/assets/camera.jpeg', class: "icon"), new_post_path%>
<% end %>
<% @posts.each do |post| %>
  <%= link_to(post_path(post.id)) do %>
    <div class="card ">
      <%= image_tag post.image.url, class: 'card-image' %>
      <div class="card-content">
        <p class="content-title"><%= post.title%></p>
        <p><%= post.locate%></p>
        <p><%= post.content%></p>
        <%# <%= post.image%> 
      </div>
    </div>
  <% end %>
<% end %>
